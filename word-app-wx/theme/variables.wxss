/**
 * 主题变量：.theme-light / .theme-dark
 * 由 theme/schemes/blue.js 映射生成，覆盖 TDesign 并注入 --app-*
 * page 作为根时也需要有默认变量，子页面未包裹 theme 类时使用
 */

page {
  --app-bg-page: #ebe8e4;
  --app-bg-page-gradient: linear-gradient(180deg, #e5e1dc 0%, #ebe8e4 35%, #eae6e2 70%, #ebe8e4 100%);
  --app-glass-bg: rgba(255, 255, 255, 0.42);
  --app-glass-border: rgba(255, 255, 255, 0.58);
  --app-glass-blur: blur(120rpx) saturate(180%);
  --app-text-primary: #333333;
  --app-text-secondary: #5c5c5c;
  --app-text-on-primary: #ffffff;
  --app-accent-warm: #f5a623;
  --app-accent-warm-muted: #b8860b;
  --app-danger: #ef4444;
  --app-danger-bg: rgba(239, 68, 68, 0.08);
  --app-danger-border: rgba(239, 68, 68, 0.3);
  --app-success: #27ae60;
}

