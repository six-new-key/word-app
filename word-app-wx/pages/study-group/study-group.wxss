.page-root {
  min-height: 100vh;
  background: var(--app-bg-page-gradient, var(--app-bg-page));
}
.page-body {
  padding: 32rpx 32rpx 120rpx;
}
.nav-extra-row {
  margin-bottom: 24rpx;
  text-align: right;
}
.create-btn {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 28rpx;
  background: linear-gradient(90deg, var(--app-primary), var(--app-primary-light));
  color: var(--app-text-on-primary);
  font-size: 24rpx;
  font-weight: 700;
  border-radius: 999rpx;
  box-shadow: 0 8rpx 24rpx rgba(63, 81, 181, 0.3);
}

/* hero card */
.hero-card {
  background: linear-gradient(135deg, var(--app-primary), var(--app-primary-light));
  border-radius: 26rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  color: var(--app-text-on-primary);
  position: relative;
  overflow: hidden;
}
.hero-tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 700;
  margin-right: 16rpx;
}
.hero-meta {
  font-size: 24rpx;
  opacity: 0.9;
}
.hero-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 24rpx;
}
.hero-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}
.hero-name {
  font-size: 44rpx;
  font-weight: 800;
}
.hero-goal {
  margin-top: 32rpx;
  padding: 24rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255,255,255,0.1);
}
.hero-goal-head {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  opacity: 0.85;
  margin-bottom: 16rpx;
}
.hero-goal-num {
  font-weight: 800;
}
.hero-progress-bar {
  width: 100%;
  height: 20rpx;
  background: rgba(0,0,0,0.2);
  border-radius: 999rpx;
  overflow: hidden;
}
.hero-progress-fill {
  height: 100%;
  background: #fff;
  border-radius: 999rpx;
  box-shadow: 0 0 20rpx rgba(255,255,255,0.35);
}
.hero-goal-done {
  margin-top: 24rpx;
  font-size: 24rpx;
  font-weight: 700;
}
.hero-chips {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
  flex-wrap: wrap;
}
.hero-chip {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 700;
  background: rgba(255,255,255,0.1);
  border: 1rpx solid rgba(255,255,255,0.15);
}
.hero-chip--active {
  background: #fff;
  color: var(--app-primary);
  border-color: rgba(255,255,255,0.6);
}
.hero-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-top: 24rpx;
}
.hero-btn {
  padding: 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 800;
  text-align: center;
}
.hero-btn--primary {
  background: #fff;
  color: var(--app-primary);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
}
.hero-btn--outline {
  background: rgba(255,255,255,0.1);
  color: #fff;
  border: 1rpx solid rgba(255,255,255,0.15);
}
.empty-join {
  background: var(--td-bg-color-container);
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid var(--td-component-stroke);
}
.empty-join-title {
  font-size: 28rpx;
  font-weight: 800;
  color: var(--app-text-primary);
  display: block;
  margin-bottom: 16rpx;
}
.empty-join-desc {
  font-size: 26rpx;
  color: var(--app-text-secondary);
  line-height: 1.5;
  display: block;
  margin-bottom: 32rpx;
}

/* section */
.section {
  margin-bottom: 40rpx;
}
.section-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
.section-title {
  font-size: 28rpx;
  font-weight: 800;
  color: var(--app-text-primary);
}
.section-link {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--app-primary);
}

/* group card */
.group-card {
  background: var(--td-bg-color-container);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid var(--td-component-stroke);
}
.group-card-main {
  display: flex;
  align-items: center;
  gap: 24rpx;
}
.group-card-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  background: var(--td-gray-color-1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
}
.group-card-info {
  flex: 1;
  min-width: 0;
}
.group-card-name {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--app-text-primary);
  display: block;
}
.group-card-meta {
  font-size: 24rpx;
  color: var(--app-text-secondary);
  margin-top: 8rpx;
  display: block;
}
.group-card-progress {
  text-align: right;
}
.group-card-pct {
  font-size: 20rpx;
  font-weight: 700;
  color: var(--app-text-secondary);
  display: block;
}
.friend-progress-bar {
  width: 128rpx;
  height: 12rpx;
  background: var(--td-gray-color-1);
  border-radius: 999rpx;
  overflow: hidden;
  margin-top: 8rpx;
}
.friend-progress-fill {
  height: 100%;
  background: var(--app-primary);
  border-radius: 999rpx;
}
.group-card-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid var(--td-component-stroke);
}
.group-card-done {
  font-size: 22rpx;
  font-weight: 700;
  color: var(--app-text-secondary);
}
.group-card-btn {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 800;
  background: var(--app-primary);
  color: var(--app-text-on-primary);
}

/* search */
.search-bar {
  height: 88rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 0 24rpx;
  background: var(--td-bg-color-container);
  border: 1rpx solid var(--td-component-stroke);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
}
.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--app-text-primary);
}

/* feed */
.empty-feed {
  padding: 40rpx 32rpx;
  font-size: 26rpx;
  color: var(--app-text-secondary);
  background: var(--td-bg-color-container);
  border-radius: 20rpx;
  border: 1rpx solid var(--td-component-stroke);
}
.feed-card {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  background: var(--td-bg-color-container);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid var(--td-component-stroke);
}
.feed-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: var(--td-gray-color-1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  flex-shrink: 0;
}
.feed-body {
  flex: 1;
  min-width: 0;
}
.feed-head {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}
.feed-user {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--app-text-primary);
}
.feed-badge {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  background: rgba(39, 174, 96, 0.12);
  color: var(--app-success);
  border-radius: 8rpx;
  font-weight: 700;
}
.feed-group {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  background: rgba(63, 81, 181, 0.1);
  color: var(--app-primary);
  border-radius: 8rpx;
  font-weight: 700;
}
.feed-time {
  font-size: 20rpx;
  font-weight: 700;
  color: var(--app-text-secondary);
  margin-left: auto;
}
.feed-content {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--app-text-secondary);
  line-height: 1.5;
  background: var(--td-gray-color-1);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}
.feed-actions {
  display: flex;
  gap: 40rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: var(--app-text-secondary);
}
.feed-like,
.feed-comment {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* space */
.space-hero {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 32rpx;
  background: linear-gradient(135deg, var(--app-primary), var(--app-primary-light));
  border-radius: 26rpx;
  margin-bottom: 24rpx;
  color: var(--app-text-on-primary);
}
.space-hero-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}
.space-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: rgba(255,255,255,0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}
.space-tag-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 22rpx;
  font-weight: 700;
  opacity: 0.85;
}
.space-tag {
  padding: 6rpx 12rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 10rpx;
}
.space-name {
  font-size: 36rpx;
  font-weight: 800;
  margin-top: 8rpx;
  display: block;
}
.space-leave {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.1);
  border: 1rpx solid rgba(255,255,255,0.15);
  display: flex;
  align-items: center;
  justify-content: center;
}
.space-goal-card {
  padding: 32rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255,255,255,0.1);
  margin-bottom: 24rpx;
  color: var(--app-text-on-primary);
}
.space-goal-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  opacity: 0.85;
  margin-bottom: 16rpx;
}
.space-goal-num {
  font-weight: 800;
}
.space-goal-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 24rpx;
  font-size: 24rpx;
  font-weight: 700;
}
.space-checkin-btn {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background: #fff;
  color: var(--app-primary);
  font-size: 24rpx;
  font-weight: 800;
}
.space-tabs {
  display: flex;
  background: var(--td-bg-color-container);
  border-radius: 22rpx;
  padding: 6rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid var(--td-component-stroke);
}
.space-tab {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 800;
  color: var(--app-text-secondary);
  border-radius: 18rpx;
}
.space-tab--active {
  background: var(--app-primary);
  color: var(--app-text-on-primary);
  box-shadow: 0 8rpx 24rpx rgba(63, 81, 181, 0.22);
}
.post-box {
  padding: 32rpx;
  background: var(--td-bg-color-container);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid var(--td-component-stroke);
}
.post-label {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--app-text-primary);
  margin-bottom: 24rpx;
}
.post-input-row {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
}
.post-input {
  flex: 1;
  min-height: 88rpx;
  max-height: 240rpx;
  padding: 20rpx 24rpx;
  border-radius: 24rpx;
  background: var(--td-gray-color-1);
  border: 1rpx solid var(--td-component-stroke);
  font-size: 28rpx;
  color: var(--app-text-primary);
  box-sizing: border-box;
}
.post-send {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  background: var(--app-primary);
  color: var(--app-text-on-primary);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* members & goal */
.members-card {
  padding: 32rpx;
  background: var(--td-bg-color-container);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid var(--td-component-stroke);
}
.members-head {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 700;
  color: var(--app-text-primary);
  margin-bottom: 24rpx;
}
.members-count {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--app-text-secondary);
}
.member-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx 0;
  border-top: 1rpx solid var(--td-component-stroke);
}
.member-row:first-child {
  border-top: none;
}
.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: var(--td-gray-color-1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 800;
  color: var(--app-text-secondary);
}
.member-info {
  flex: 1;
  min-width: 0;
}
.member-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: var(--app-text-primary);
}
.member-role {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  background: rgba(63, 81, 181, 0.1);
  color: var(--app-primary);
  border-radius: 8rpx;
  font-weight: 700;
}
.member-extra {
  font-size: 22rpx;
  color: var(--app-text-secondary);
  margin-top: 4rpx;
  display: block;
}
.member-follow {
  font-size: 22rpx;
  font-weight: 700;
  color: var(--app-primary);
  padding: 12rpx 20rpx;
  background: rgba(63, 81, 181, 0.1);
  border-radius: 999rpx;
}
.goal-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx 32rpx;
  background: var(--td-gray-color-1);
  border-radius: 20rpx;
  margin-bottom: 16rpx;
}
.goal-rank {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: var(--td-bg-color-container);
  border: 1rpx solid var(--td-component-stroke);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 800;
  color: var(--app-text-secondary);
}
.goal-rank--1 {
  background: rgba(245, 166, 35, 0.15);
  color: var(--app-accent-warm);
  border: none;
}
.goal-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 700;
  color: var(--app-text-primary);
}
.goal-words {
  font-size: 28rpx;
  font-weight: 800;
  color: var(--app-primary);
}
.goal-tip {
  font-size: 24rpx;
  color: var(--app-text-secondary);
  line-height: 1.5;
  padding: 24rpx;
  background: var(--td-bg-color-container);
  border-radius: 20rpx;
  border: 1rpx solid var(--td-component-stroke);
}

/* mask & sheet */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 90;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.sheet {
  width: 100%;
  max-width: 750rpx;
  max-height: 80vh;
  overflow-y: auto;
  border-radius: 28rpx 28rpx 0 0;
  background: var(--td-bg-color-container);
  padding: 32rpx 40rpx 48rpx;
}
.sheet-title {
  font-size: 28rpx;
  font-weight: 800;
  color: var(--app-text-primary);
  margin-bottom: 32rpx;
}
.form-label {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--app-text-secondary);
  margin-bottom: 16rpx;
  display: block;
}
.sheet-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border-radius: 24rpx;
  background: var(--td-gray-color-1);
  border: 1rpx solid var(--td-component-stroke);
  font-size: 28rpx;
  color: var(--app-text-primary);
  margin-bottom: 24rpx;
  box-sizing: border-box;
}
.form-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.form-row .sheet-input {
  flex: 1;
  margin-bottom: 0;
}
.tag-chips,
.quick-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}
.tag-chip {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 800;
  background: var(--td-bg-color-container);
  border: 1rpx solid var(--td-component-stroke);
  color: var(--app-text-secondary);
}
.tag-chip--active {
  background: var(--app-primary);
  color: var(--app-text-on-primary);
  border-color: var(--app-primary);
}
.sheet-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-top: 32rpx;
}
.sheet-btn {
  height: 88rpx;
  border-radius: 24rpx;
  background: var(--td-gray-color-1);
  color: var(--app-text-primary);
  font-size: 28rpx;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
}
.sheet-btn--primary {
  background: var(--app-primary);
  color: var(--app-text-on-primary);
}
.toast {
  position: fixed;
  bottom: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 24rpx 48rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.75);
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
  z-index: 100;
}
