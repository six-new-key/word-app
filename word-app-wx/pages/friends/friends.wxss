.page-root {
  min-height: 100vh;
  background: var(--app-bg-page-gradient, var(--app-bg-page));
}
.page-body {
  padding: 32rpx 32rpx 120rpx;
}
.page-head-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}
.search-bar {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 0 24rpx;
  background: var(--app-glass-bg);
  backdrop-filter: var(--app-glass-blur);
  -webkit-backdrop-filter: var(--app-glass-blur);
  border: 1rpx solid var(--app-glass-border);
  border-radius: 20rpx;
  color: var(--app-primary);
}
.search-input {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--app-text-primary);
}
.add-friend-btn {
  padding: 20rpx 28rpx;
  background: var(--app-primary);
  color: var(--app-text-on-primary);
  font-size: 28rpx;
  font-weight: 700;
  border-radius: 999rpx;
}
.online-card {
  background: var(--app-glass-bg);
  backdrop-filter: var(--app-glass-blur);
  -webkit-backdrop-filter: var(--app-glass-blur);
  border: 1rpx solid var(--app-glass-border);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}
.online-head {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--app-text-secondary);
}
.online-count {
  font-size: 28rpx;
  font-weight: 800;
  color: var(--app-text-primary);
  margin-left: 8rpx;
}
.online-sub {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--app-primary);
  margin-top: 8rpx;
  margin-bottom: 24rpx;
}
.online-scroll {
  white-space: nowrap;
}
.online-avatar-wrap {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  margin-right: 32rpx;
  vertical-align: top;
}
.online-name {
  font-size: 20rpx;
  font-weight: 700;
  color: var(--app-text-secondary);
  max-width: 112rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.online-empty {
  font-size: 26rpx;
  color: var(--app-text-secondary);
}
.friend-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: var(--td-gray-color-1);
  border: 1rpx solid var(--td-component-stroke);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 800;
  color: var(--app-text-secondary);
}
.friend-avatar--sm {
  width: 96rpx;
  height: 96rpx;
  font-size: 32rpx;
}
.friend-avatar--xl {
  width: 112rpx;
  height: 112rpx;
  font-size: 44rpx;
}
.online-dot {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 24rpx;
  height: 24rpx;
  background: var(--app-success);
  border: 4rpx solid var(--td-bg-color-container);
  border-radius: 50%;
}
.online-avatar-wrap .friend-avatar,
.friend-card .friend-card-left .friend-avatar {
  position: relative;
}
.online-dot--lg {
  width: 28rpx;
  height: 28rpx;
  border-width: 4rpx;
}
.online-dot--xl {
  width: 32rpx;
  height: 32rpx;
  border-width: 4rpx;
}
.friend-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.friend-card {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 32rpx;
  background: var(--td-bg-color-container);
  border-radius: 24rpx;
  border: 1rpx solid var(--td-component-stroke);
}
.friend-card-left {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  flex: 1;
  min-width: 0;
}
.friend-info {
  flex: 1;
  min-width: 0;
}
.friend-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}
.friend-name {
  font-size: 32rpx;
  font-weight: 800;
  color: var(--app-text-primary);
  max-width: 240rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.friend-level {
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  background: var(--td-gray-color-1);
  color: var(--app-text-secondary);
  border-radius: 999rpx;
  font-weight: 700;
}
.friend-streak {
  font-size: 20rpx;
  font-weight: 700;
  color: var(--app-accent-warm);
  margin-bottom: 16rpx;
}
.friend-progress-wrap {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.friend-progress-bar {
  flex: 1;
  height: 16rpx;
  background: var(--td-gray-color-1);
  border-radius: 999rpx;
  overflow: hidden;
}
.friend-progress-fill {
  height: 100%;
  background: var(--app-primary);
  border-radius: 999rpx;
}
.friend-progress-pct {
  font-size: 20rpx;
  font-weight: 700;
  color: var(--app-text-secondary);
  min-width: 56rpx;
}
.friend-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.friend-action-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(63, 81, 181, 0.08);
  color: var(--app-primary);
  display: flex;
  align-items: center;
  justify-content: center;
}
.friend-action-btn--chat {
  background: var(--td-gray-color-1);
  color: var(--app-text-secondary);
}
.empty-tip {
  padding: 48rpx 32rpx;
  text-align: center;
}
.empty-title {
  font-size: 28rpx;
  font-weight: 800;
  color: var(--app-text-primary);
  display: block;
  margin-bottom: 16rpx;
}
.empty-desc {
  font-size: 26rpx;
  color: var(--app-text-secondary);
}

/* mask & sheet */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 90;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.sheet {
  width: 100%;
  max-width: 750rpx;
  max-height: 80vh;
  border-radius: 28rpx 28rpx 0 0;
  background: var(--td-bg-color-container);
  padding: 32rpx 40rpx 48rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.sheet--center {
  align-items: stretch;
  max-height: none;
}
.sheet-title {
  font-size: 28rpx;
  font-weight: 800;
  color: var(--app-text-primary);
  margin-bottom: 32rpx;
}
.sheet-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border-radius: 24rpx;
  background: var(--td-gray-color-1);
  border: 1rpx solid var(--td-component-stroke);
  font-size: 28rpx;
  color: var(--app-text-primary);
  margin-bottom: 32rpx;
  box-sizing: border-box;
}
.sheet-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}
.sheet-btn {
  height: 88rpx;
  border-radius: 24rpx;
  background: var(--td-gray-color-1);
  color: var(--app-text-primary);
  font-size: 28rpx;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
}
.sheet-btn--primary {
  background: var(--app-primary);
  color: var(--app-text-on-primary);
}

/* profile */
.profile-body {
  flex: 1;
  overflow-y: auto;
}
.profile-head {
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 24rpx;
  position: relative;
}
.profile-meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.profile-extra {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--app-text-secondary);
}
.profile-head .friend-progress-bar {
  margin-bottom: 32rpx;
}
.profile-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 24rpx;
}
.profile-btn {
  height: 96rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
}
.profile-btn--outline {
  background: rgba(63, 81, 181, 0.1);
  color: var(--app-primary);
}
.profile-btn--primary {
  background: var(--app-primary);
  color: var(--app-text-on-primary);
}
.profile-btn--danger {
  border: 1rpx solid var(--app-danger-border);
  color: var(--app-danger);
}

/* chat */
.chat-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 400rpx;
}
.chat-title {
  font-size: 28rpx;
  font-weight: 800;
  color: var(--app-text-primary);
  margin-bottom: 24rpx;
}
.chat-messages {
  flex: 1;
  max-height: 400rpx;
  margin-bottom: 24rpx;
}
.chat-msg {
  padding: 20rpx 24rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--app-text-primary);
  background: var(--td-gray-color-1);
  margin-bottom: 16rpx;
  max-width: 80%;
}
.chat-msg--me {
  margin-left: auto;
  background: var(--app-primary);
  color: var(--app-text-on-primary);
}
.chat-empty {
  font-size: 26rpx;
  color: var(--app-text-secondary);
  padding: 24rpx 0;
}
.chat-input-wrap {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
}
.chat-input {
  flex: 1;
  min-height: 84rpx;
  max-height: 220rpx;
  padding: 20rpx 24rpx;
  border-radius: 24rpx;
  background: var(--td-gray-color-1);
  border: 1rpx solid var(--td-component-stroke);
  font-size: 28rpx;
  color: var(--app-text-primary);
  box-sizing: border-box;
}
.chat-send {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  background: var(--app-primary);
  color: var(--app-text-on-primary);
  display: flex;
  align-items: center;
  justify-content: center;
}
.toast {
  position: fixed;
  bottom: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 24rpx 48rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.75);
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
  z-index: 100;
}
