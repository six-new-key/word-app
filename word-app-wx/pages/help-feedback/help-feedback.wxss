.page-root {
  min-height: 100vh;
  background: var(--app-bg-page-gradient, var(--app-bg-page));
}
.page-body {
  padding: 32rpx 32rpx 120rpx;
}
.help-card {
  background: var(--app-glass-bg);
  backdrop-filter: var(--app-glass-blur);
  -webkit-backdrop-filter: var(--app-glass-blur);
  border: 1rpx solid var(--app-glass-border);
  border-radius: 26rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
}
.help-card-head {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx 40rpx;
  font-size: 28rpx;
  font-weight: 800;
  color: var(--app-text-primary);
}
.help-card-head--accent {
  color: var(--app-accent);
}
.help-card-head t-icon {
  color: var(--app-primary);
}
.help-card-head--accent t-icon {
  color: var(--app-accent);
}
.faq-list {
  padding: 0 32rpx 32rpx;
}
.faq-item {
  border-radius: 20rpx;
  background: var(--td-bg-color-container);
  border: 1rpx solid var(--app-glass-border);
  overflow: hidden;
  margin-bottom: 16rpx;
}
.faq-q {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
}
.faq-q-text {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--app-text-primary);
  flex: 1;
}
.faq-arrow {
  color: var(--app-text-secondary);
  flex-shrink: 0;
}
.faq-a {
  padding: 0 32rpx 28rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: var(--app-text-secondary);
  line-height: 1.6;
}
.feedback-form {
  padding: 0 40rpx 40rpx;
}
.feedback-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border-radius: 24rpx;
  background: var(--td-bg-color-container);
  border: 1rpx solid var(--app-glass-border);
  font-size: 28rpx;
  font-weight: 600;
  color: var(--app-text-primary);
  margin-bottom: 24rpx;
  box-sizing: border-box;
}
.feedback-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border-radius: 24rpx;
  background: var(--td-bg-color-container);
  border: 1rpx solid var(--app-glass-border);
  font-size: 28rpx;
  font-weight: 600;
  color: var(--app-text-primary);
  margin-bottom: 24rpx;
  box-sizing: border-box;
}
.feedback-btn {
  height: 104rpx;
  border-radius: 20rpx;
  background: var(--app-primary);
  color: var(--app-text-on-primary);
  font-size: 32rpx;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
}
.toast {
  position: fixed;
  bottom: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 24rpx 48rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.75);
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
  z-index: 100;
}
