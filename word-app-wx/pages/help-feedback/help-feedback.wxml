<view class="page-root theme-{{theme}}">
  <t-navbar title="帮助与反馈" left-arrow placeholder bind:go-back="onBack" />
  <view class="page-body">
    <view class="help-card">
      <view class="help-card-head">
        <t-icon name="help-circle" size="36rpx" />
        <text>常见问题</text>
      </view>
      <view class="faq-list">
        <view wx:for="{{faq}}" wx:key="key" class="faq-item">
          <view class="faq-q" bindtap="onFaqTap" data-key="{{item.key}}">
            <text class="faq-q-text">{{item.q}}</text>
            <t-icon name="{{openFaq === item.key ? 'chevron-up' : 'chevron-down'}}" size="32rpx" class="faq-arrow" />
          </view>
          <view wx:if="{{openFaq === item.key}}" class="faq-a">{{item.a}}</view>
        </view>
      </view>
    </view>

    <view class="help-card">
      <view class="help-card-head help-card-head--accent">
        <t-icon name="mail" size="36rpx" />
        <text>反馈</text>
      </view>
      <view class="feedback-form">
        <input class="feedback-input" placeholder="邮箱（可选）" value="{{state.email}}" bindinput="onEmailInput" />
        <textarea class="feedback-textarea" placeholder="写下你的想法、问题或建议…" value="{{state.feedback}}" bindinput="onFeedbackInput" maxlength="500" />
        <view class="feedback-btn" bindtap="onSubmit">提交反馈</view>
      </view>
    </view>
  </view>

  <view wx:if="{{toast}}" class="toast">{{toast}}</view>
</view>
