.page-root {
  min-height: 100vh;
  background: var(--app-bg-page-gradient, var(--app-bg-page));
}
.page-body {
  padding: 32rpx 32rpx 120rpx;
}
.section {
  margin-bottom: 48rpx;
}
.section-head {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}
.dot {
  width: 8rpx;
  height: 24rpx;
  border-radius: 4rpx;
  background: var(--app-primary);
  opacity: 0.6;
}
.dot--purple {
  background: var(--app-primary-light);
}
.dot--accent {
  background: var(--app-accent);
}
.section-title {
  font-size: 24rpx;
  font-weight: 800;
  color: var(--app-text-secondary);
  letter-spacing: 0.08em;
}
.plan-card {
  background: var(--app-glass-bg);
  backdrop-filter: var(--app-glass-blur);
  -webkit-backdrop-filter: var(--app-glass-blur);
  border: 1rpx solid var(--app-glass-border);
  border-radius: 28rpx;
  padding: 32rpx;
  overflow: hidden;
}
.plan-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}
.counter-card {
  border-radius: 24rpx;
  border: 1rpx solid var(--app-glass-border);
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}
.counter-card--primary {
  background: rgba(63, 81, 181, 0.06);
}
.counter-card--purple {
  background: rgba(117, 125, 232, 0.08);
}
.counter-label {
  font-size: 20rpx;
  font-weight: 800;
  color: var(--app-text-secondary);
  text-transform: uppercase;
}
.counter-card--primary .counter-value {
  font-size: 56rpx;
  font-weight: 800;
  color: var(--app-primary);
}
.counter-card--purple .counter-value {
  font-size: 56rpx;
  font-weight: 800;
  color: var(--app-primary-light);
}
.counter-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}
.counter-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: var(--td-bg-color-container);
  border: 1rpx solid var(--app-glass-border);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--app-text-secondary);
}
.counter-btn--plus {
  color: var(--app-text-primary);
}
.day-chips {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 16rpx;
}
.day-chip {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 800;
  color: var(--app-text-secondary);
  background: var(--td-gray-color-1);
}
.day-chip--active {
  background: var(--app-primary);
  color: var(--app-text-on-primary);
  box-shadow: 0 8rpx 24rpx rgba(63, 81, 181, 0.3);
}
.day-hint {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid var(--td-component-stroke);
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: var(--app-text-secondary);
}
.setting-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--app-text-primary);
}
.setting-row + .setting-row {
  border-top: 1rpx solid var(--td-component-stroke);
}
.setting-row .value {
  color: var(--app-text-secondary);
  font-size: 26rpx;
  margin-right: 8rpx;
}
.setting-row-right {
  display: flex;
  align-items: center;
}
.save-btn {
  height: 112rpx;
  border-radius: 24rpx;
  background: var(--app-primary);
  color: var(--app-text-on-primary);
  font-size: 32rpx;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 48rpx rgba(63, 81, 181, 0.3);
}
.toast {
  position: fixed;
  bottom: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 24rpx 48rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.8);
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
  z-index: 100;
}
