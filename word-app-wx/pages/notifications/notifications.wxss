.page-root {
  min-height: 100vh;
  background: var(--app-bg-page-gradient, var(--app-bg-page));
}
.page-body {
  padding: 32rpx 32rpx 120rpx;
}
.section {
  margin-bottom: 48rpx;
}
.section-head {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}
.dot {
  width: 8rpx;
  height: 24rpx;
  border-radius: 4rpx;
  background: var(--app-primary);
  opacity: 0.6;
}
.dot--purple {
  background: var(--app-primary-light);
}
.section-title {
  font-size: 24rpx;
  font-weight: 800;
  color: var(--app-text-secondary);
  letter-spacing: 0.08em;
}
.notify-card {
  background: var(--app-glass-bg);
  backdrop-filter: var(--app-glass-blur);
  -webkit-backdrop-filter: var(--app-glass-blur);
  border: 1rpx solid var(--app-glass-border);
  border-radius: 24rpx;
  overflow: hidden;
}
.notify-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
}
.notify-row-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}
.notify-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.notify-icon--blue {
  background: rgba(33, 150, 243, 0.12);
  color: var(--app-accent);
}
.notify-icon--green {
  background: rgba(39, 174, 96, 0.12);
  color: var(--app-success);
}
.notify-icon--purple {
  background: rgba(117, 125, 232, 0.12);
  color: var(--app-primary-light);
}
.notify-icon--orange {
  background: rgba(245, 166, 35, 0.15);
  color: var(--app-accent-warm);
}
.notify-icon--indigo {
  background: rgba(99, 102, 241, 0.12);
  color: var(--app-primary);
}
.notify-label {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--app-text-primary);
  display: block;
}
.notify-sub {
  font-size: 22rpx;
  color: var(--app-text-secondary);
  margin-top: 4rpx;
  display: block;
}
.notify-divider {
  height: 1rpx;
  background: var(--td-component-stroke);
  margin-left: 128rpx;
}
.quiet-time-wrap {
  padding: 24rpx 32rpx;
  background: var(--td-gray-color-1);
  border-radius: 24rpx;
  margin: 0 32rpx 24rpx;
  border: 1rpx solid var(--td-component-stroke);
}
.quiet-time-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--app-text-primary);
}
.quiet-time-row + .quiet-time-row {
  border-top: 1rpx solid var(--td-component-stroke);
}
.quiet-value {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--app-text-secondary);
}
.quiet-hint {
  font-size: 20rpx;
  color: var(--app-text-secondary);
  line-height: 1.5;
  padding: 24rpx 32rpx;
  background: var(--td-gray-color-1);
  margin: 0 32rpx 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid var(--td-component-stroke);
}
