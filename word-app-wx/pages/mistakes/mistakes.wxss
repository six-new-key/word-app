.page-root{min-height:100vh;background:var(--app-bg-page-gradient,var(--app-bg-page))}.page-body{padding:32rpx 32rpx 140rpx}.stats-row{display:flex;gap:24rpx;margin-bottom:48rpx}.stat-card{flex:1;border-radius:24rpx;padding:40rpx;position:relative}.stat-card--red{background:linear-gradient(135deg,var(--app-danger),#dc2626);color:var(--app-text-on-primary);box-shadow:0 8rpx 24rpx rgba(239,68,68,.3)}.stat-card--white{background:var(--td-bg-color-container);border:1rpx solid var(--td-component-stroke)}.stat-label{font-size:24rpx;font-weight:600;color:inherit;opacity:.9;display:block;margin-bottom:8rpx}.stat-value{font-size:56rpx;font-weight:800;display:block}.stat-value--green{color:var(--app-success)}.mistake-list{margin-bottom:48rpx}.mistake-item{display:flex;justify-content:space-between;align-items:center;padding:32rpx;background:var(--td-bg-color-container);border-radius:24rpx;margin-bottom:24rpx;border:1rpx solid var(--td-component-stroke)}.mistake-word{font-size:36rpx;font-weight:700;color:var(--app-text-primary);display:block;margin-bottom:8rpx}.mistake-mean{font-size:26rpx;color:var(--app-text-secondary)}.mistake-actions{display:flex;align-items:center;gap:24rpx}.mistake-badge{padding:12rpx 20rpx;background:var(--app-danger-bg);color:var(--app-danger);font-size:22rpx;font-weight:700;border-radius:12rpx}.mistake-btn{width:56rpx;height:56rpx;border-radius:50%;background:var(--td-gray-color-1);display:flex;align-items:center;justify-content:center;color:var(--app-text-secondary)}.start-btn{display:flex;align-items:center;justify-content:center;gap:16rpx;padding:40rpx;background:var(--app-text-primary);color:var(--app-text-on-primary);font-size:36rpx;font-weight:700;border-radius:24rpx}
