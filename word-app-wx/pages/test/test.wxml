<view class="page-root theme-{{theme}}">
  <t-navbar title="{{title}}" left-arrow placeholder bind:go-back="onBack" />
  <view class="page-body">
    <view class="progress-chip">
      <t-progress theme="line" percentage="{{progress}}" stroke-width="6" class="progress-bar" />
      <text class="progress-text">{{current}}/{{total}}</text>
    </view>
    <view class="question-card">
      <view class="question-top-bar"></view>
      <view class="question-sound">
        <t-icon name="sound" size="48rpx" />
      </view>
      <text class="question-mean">{{question.mean}}</text>
      <view class="question-hint">请选择对应的英文单词</view>
    </view>
    <view class="options">
      <view wx:for="{{question.options}}" wx:key="*this" class="option {{selectedOption === index ? 'option--active' : ''}}" data-index="{{index}}" bindtap="onOptionTap">
        <text>{{item}}</text>
        <t-icon wx:if="{{selectedOption === index}}" name="check-circle-filled" size="40rpx" />
        <view wx:else class="option-dot"></view>
      </view>
    </view>
    <view class="actions">
      <view class="btn btn--skip" bindtap="onSkip">跳过</view>
      <view class="btn btn--confirm" bindtap="onConfirm">确认提交</view>
    </view>
  </view>
</view>
